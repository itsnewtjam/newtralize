<?xml version="1.0" encoding="UTF-8" ?>
<extension type="template" version="4.0" method="upgrade">
  <name>newtralize</name>
  <version>0.0.7</version>
  <creationDate>2023-07-13</creationDate>
  <author>newtjam</author>
  <authorEmail>joomla@newtjam.com</authorEmail>
  <authorUrl>https://newtjam.com</authorUrl>
  <copyright>Copyright (C) 2023 newtjam. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later</license>
  <description>newtralize is a clean and minimal template designed to neutralize Joomla and stay out of your way.</description>
  <updateservers>
    <server type="extension" name="newtralize Updates">https://raw.githubusercontent.com/itsnewtjam/newtralize/master/dist/update.xml</server>
  </updateservers>
  <scriptfile>install.php</scriptfile>
  <files>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>heads</folder>
    <folder>html</folder>
    <folder>js</folder>
    <filename>error.php</filename>
    <filename>index.php</filename>
    <filename>template_thumbnail.png</filename>
    <filename>templateDetails.xml</filename>
  </files>
  <positions>
    <position>banner</position>
    <position>navbar</position>
    <position>navigation</position>
    <position>above-body</position>
    <position>left-body</position>
    <position>main-body-top</position>
    <position>main-body-bottom</position>
    <position>right-body</position>
    <position>below-body</position>
    <position>footer</position>
  </positions>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_newtralize.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_newtralize.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="SITE_SETTINGS">
        <field
          name="logo"
          type="media"
          label="TPL_NEWTRALIZE_LOGO_LABEL"
          description="TPL_NEWTRALIZE_LOGO_DESC"
        />
        <field 
          name="showFooterLogo"
          type="radio"
          label="TPL_NEWTRALIZE_SHOWFOOTERLOGO_LABEL"
          description="TPL_NEWTRALIZE_SHOWFOOTERLOGO_DESC"
          class="btn-group btn-group-yesno"
          default="1" 
        >
          <option value="0">TPL_NEWTRALIZE_NO</option>
          <option value="1">TPL_NEWTRALIZE_YES</option>
        </field>
        <field 
          name="differentFooterLogo"
          type="radio"
          label="TPL_NEWTRALIZE_DIFFERENTFOOTERLOGO_LABEL"
          description="TPL_NEWTRALIZE_DIFFERENTFOOTERLOGO_DESC"
          class="btn-group btn-group-yesno"
          default="1" 
          showon="showFooterLogo:1"
        >
          <option value="0">TPL_NEWTRALIZE_NO</option>
          <option value="1">TPL_NEWTRALIZE_YES</option>
        </field>
        <field
          name="footerLogo"
          type="media"
          label="TPL_NEWTRALIZE_FOOTERLOGO_LABEL"
          description="TPL_NEWTRALIZE_FOOTERLOGO_DESC"
          showon="differentFooterLogo:1"
        />
        <field
          name="showCopyright"
          type="radio"
          class="btn-group btn-group-yesno"
          default="1"
          label="TPL_NEWTRALIZE_COPYRIGHT_LABEL"
          description="TPL_NEWTRALIZE_COPYRIGHT_DESC"
          showon="footer:1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="copyrightText"
          type="text"
          default=""
          label="TPL_NEWTRALIZE_COPYRIGHTTEXT_LABEL"
          description="TPL_NEWTRALIZE_COPYRIGHTTEXT_DESC"
          filter="string"
          showon="showCopyright:1"
        />
      </fieldset>

      <fieldset name="CACHE_SETTINGS">
        <field
          name="noCacheHeaders"
          type="radio"
          label="TPL_NEWTRALIZE_NOCACHEHEADERS_LABEL"
          description="TPL_NEWTRALIZE_NOCACHEHEADERS_DESC"
          class="btn-group btn-group-yesno"
          default="0"
        >
          <option value="0">TPL_NEWTRALIZE_NO</option>
          <option value="1">TPL_NEWTRALIZE_YES</option>
        </field>
        <field
          name="uncacheCss"
          type="radio"
          label="TPL_NEWTRALIZE_UNCACHECSS_LABEL"
          description="TPL_NEWTRALIZE_UNCACHECSS_DESC"
          class="btn-group btn-group-yesno"
          default="0"
        >
          <option value="0">TPL_NEWTRALIZE_NO</option>
          <option value="1">TPL_NEWTRALIZE_YES</option>
        </field>
        <field
          name="uncacheJs" 
          type="radio"
          label="TPL_NEWTRALIZE_UNCACHEJS_LABEL"
          description="TPL_NEWTRALIZE_UNCACHEJS_DESC"
          class="btn-group btn-group-yesno"
          default="0"
        >
          <option value="0">TPL_NEWTRALIZE_NO</option>
          <option value="1">TPL_NEWTRALIZE_YES</option>
        </field>
      </fieldset>

      <fieldset name="SCOPED_CODE_SETTINGS">
        <field
          name="scopeCssBy" 
          type="radio"
          label="TPL_NEWTRALIZE_SCOPECSSBY_LABEL"
          description="TPL_NEWTRALIZE_SCOPECSSBY_DESC"
          class="btn-group"
          default="alias"
        >
          <option value="alias">TPL_NEWTRALIZE_SCOPEBY_ALIAS</option>
          <option value="id">TPL_NEWTRALIZE_SCOPEBY_ID</option>
        </field>
        <field
          name="scopeJsBy" 
          type="radio"
          label="TPL_NEWTRALIZE_SCOPEJSBY_LABEL"
          description="TPL_NEWTRALIZE_SCOPEJSBY_DESC"
          class="btn-group"
          default="alias"
        >
          <option value="alias">TPL_NEWTRALIZE_SCOPEBY_ALIAS</option>
          <option value="id">TPL_NEWTRALIZE_SCOPEBY_ID</option>
        </field>
        <field
          name="scopeHeadsBy" 
          type="radio"
          label="TPL_NEWTRALIZE_SCOPEHEADSBY_LABEL"
          description="TPL_NEWTRALIZE_SCOPEHEADSBY_DESC"
          class="btn-group"
          default="alias"
        >
          <option value="alias">TPL_NEWTRALIZE_SCOPEBY_ALIAS</option>
          <option value="id">TPL_NEWTRALIZE_SCOPEBY_ID</option>
        </field>
      </fieldset>
      
      <fieldset name="TRACKING_SETTINGS">
        <field
          name="gtmCode"
          type="text"
          label="TPL_NEWTRALIZE_GTM_LABEL"
          description="TPL_NEWTRALIZE_GTM_DESC"
          default=""
          filter="string"
        />
        <field
          name="gaCode"
          type="text"
          label="TPL_NEWTRALIZE_GA_LABEL"
          description="TPL_NEWTRALIZE_GA_DESC"
          default=""
          filter="string"
        />
        <field
          name="metaCode"
          type="text"
          default=""
          label="TPL_NEWTRALIZE_META_LABEL"
          description="TPL_NEWTRALIZE_META_DESC"
          filter="string"
        />
      </fieldset>
      
      <fieldset name="ICON_SETTINGS">
        <field
          name="fontAwesomeKit"
          type="text"
          label="TPL_NEWTRALIZE_FONTAWESOMEKIT_LABEL"
          description="TPL_NEWTRALIZE_FONTAWESOMEKIT_DESC"
        />
      </fieldset>

      <fieldset name="LAYOUT_SETTINGS">
        <field
          name="paddingInline"
          type="number"
          label="TPL_NEWTRALIZE_CONTAINERPADDING_LABEL"
          description="TPL_NEWTRALIZE_CONTAINERPADDING_DESC"
          default="1"
          min="0"
          filter="string"
        />
        <field
          name="containerNormal"
          type="number"
          label="TPL_NEWTRALIZE_CONTAINERNORMAL_LABEL"
          description="TPL_NEWTRALIZE_CONTAINERNORMAL_DESC"
          default="64"
          min="0"
          filter="string"
        />
        <field
          name="containerWide"
          type="number"
          label="TPL_NEWTRALIZE_CONTAINERWIDE_LABEL"
          description="TPL_NEWTRALIZE_CONTAINERWIDE_DESC"
          default="75"
          min="0"
          filter="string"
        />
        <field
          name="bannerSize"
          type="radio"
          label="TPL_NEWTRALIZE_BANNERSIZE_LABEL"
          description="TPL_NEWTRALIZE_BANNERSIZE_DESC"
          class="btn-group"
          default="normal"
          showon="banner:1"
        >
          <option value="normal">TPL_NEWTRALIZE_SIZE_NORMAL</option>
          <option value="wide">TPL_NEWTRALIZE_SIZE_WIDE</option>
          <option value="full">TPL_NEWTRALIZE_SIZE_FULL</option>
        </field>
        <field
          name="navbarSize"
          type="radio"
          label="TPL_NEWTRALIZE_NAVBARSIZE_LABEL"
          description="TPL_NEWTRALIZE_NAVBARSIZE_DESC"
          class="btn-group"
          default="normal"
          showon="navbar:1"
        >
          <option value="normal">TPL_NEWTRALIZE_SIZE_NORMAL</option>
          <option value="wide">TPL_NEWTRALIZE_SIZE_WIDE</option>
          <option value="full">TPL_NEWTRALIZE_SIZE_FULL</option>
        </field>
        <field
          name="aboveBodySize"
          type="radio"
          label="TPL_NEWTRALIZE_ABOVEBODYSIZE_LABEL"
          description="TPL_NEWTRALIZE_ABOVEBODYSIZE_DESC"
          class="btn-group"
          default="normal"
          showon="aboveBody:1"
        >
          <option value="normal">TPL_NEWTRALIZE_SIZE_NORMAL</option>
          <option value="wide">TPL_NEWTRALIZE_SIZE_WIDE</option>
          <option value="full">TPL_NEWTRALIZE_SIZE_FULL</option>
        </field>
        <field
          name="mainBodySize"
          type="radio"
          label="TPL_NEWTRALIZE_MAINBODYSIZE_LABEL"
          description="TPL_NEWTRALIZE_MAINBODYSIZE_DESC"
          class="btn-group"
          default="normal"
          showon="mainBody:1"
        >
          <option value="normal">TPL_NEWTRALIZE_SIZE_NORMAL</option>
          <option value="wide">TPL_NEWTRALIZE_SIZE_WIDE</option>
          <option value="full">TPL_NEWTRALIZE_SIZE_FULL</option>
        </field>
        <field
          name="belowBodySize"
          type="radio"
          label="TPL_NEWTRALIZE_BELOWBODYSIZE_LABEL"
          description="TPL_NEWTRALIZE_BELOWBODYSIZE_DESC"
          class="btn-group"
          default="normal"
          showon="belowBody:1"
        >
          <option value="normal">TPL_NEWTRALIZE_SIZE_NORMAL</option>
          <option value="wide">TPL_NEWTRALIZE_SIZE_WIDE</option>
          <option value="full">TPL_NEWTRALIZE_SIZE_FULL</option>
        </field>
        <field
          name="footerSize"
          type="radio"
          label="TPL_NEWTRALIZE_FOOTERSIZE_LABEL"
          description="TPL_NEWTRALIZE_FOOTERSIZE_DESC"
          class="btn-group"
          default="normal"
          showon="footer:1"
        >
          <option value="normal">TPL_NEWTRALIZE_SIZE_NORMAL</option>
          <option value="wide">TPL_NEWTRALIZE_SIZE_WIDE</option>
          <option value="full">TPL_NEWTRALIZE_SIZE_FULL</option>
        </field>
      </fieldset>

      <fieldset name="MODULE_SETTINGS">
        <field
          name="banner"
          type="radio"
          label="TPL_NEWTRALIZE_BANNER_LABEL"
          description="TPL_NEWTRALIZE_BANNER_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field 
          name="navbar"
          type="radio"
          label="TPL_NEWTRALIZE_NAVBAR_LABEL"
          description="TPL_NEWTRALIZE_NAVBAR_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="aboveBody"
          type="radio"
          label="TPL_NEWTRALIZE_ABOVEBODY_LABEL"
          description="TPL_NEWTRALIZE_ABOVEBODY_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="leftBody"
          type="radio"
          label="TPL_NEWTRALIZE_LEFTBODY_LABEL"
          description="TPL_NEWTRALIZE_LEFTBODY_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="mainBodyTop"
          type="radio"
          label="TPL_NEWTRALIZE_MAINBODYTOP_LABEL"
          description="TPL_NEWTRALIZE_MAINBODYTOP_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="mainBodyBottom"
          type="radio"
          label="TPL_NEWTRALIZE_MAINBODYBOTTOM_LABEL"
          description="TPL_NEWTRALIZE_MAINBODYBOTTOM_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="rightBody"
          type="radio"
          label="TPL_NEWTRALIZE_RIGHTBODY_LABEL"
          description="TPL_NEWTRALIZE_RIGHTBODY_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="belowBody"
          type="radio"
          label="TPL_NEWTRALIZE_BELOWBODY_LABEL"
          description="TPL_NEWTRALIZE_BELOWBODY_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
        <field
          name="footer"
          type="radio"
          label="TPL_NEWTRALIZE_FOOTER_LABEL"
          description="TPL_NEWTRALIZE_FOOTER_DESC"
          class="btn-group btn-group-yesno"
          default="1"
        >
          <option value="0">TPL_NEWTRALIZE_DISABLED</option>
          <option value="1">TPL_NEWTRALIZE_ENABLED</option>
        </field>
      </fieldset>
      
      <fieldset name="CUSTOM_CODE">
        <field
          name="codeAfterHead"
          type="textarea"
          label="TPL_NEWTRALIZE_CODEAFTERHEAD_LABEL"
          description="TPL_NEWTRALIZE_CODEAFTERHEAD_DESC"
          rows="4"
          columns="30"
          filter="raw"
          default=""
        />
        <field
          name="codeBeforeHead"
          type="textarea"
          label="TPL_NEWTRALIZE_CODEBEFOREHEAD_LABEL"
          description="TPL_NEWTRALIZE_CODEBEFOREHEAD_DESC"
          rows="4"
          columns="30"
          filter="raw"
          default=""
        />
        <field
          name="codeAfterBody"
          type="textarea"
          label="TPL_NEWTRALIZE_CODEAFTERBODY_LABEL"
          description="TPL_NEWTRALIZE_CODEAFTERBODY_DESC"
          rows="4"
          columns="30"
          filter="raw"
          default=""
        />
        <field
          name="codeBeforeBody"
          type="textarea"
          label="TPL_NEWTRALIZE_CODEBEFOREBODY_LABEL"
          description="TPL_NEWTRALIZE_CODEBEFOREBODY_DESC"
          rows="4"
          columns="30"
          filter="raw"
          default=""
        />
      </fieldset>
		</fields>
  </config>
</extension>
